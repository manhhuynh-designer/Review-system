rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    // Projects collection
    match /projects/{projectId} {
      // Public read (for review links)
      allow read: if true;

      // Only authenticated admins can create with required name field
      allow create: if isAuthenticated() 
        && request.resource.data.name is string 
        && request.resource.data.name.size() > 0;

      // Only authenticated admins can update
      allow update: if isAuthenticated()
        && (request.resource.data.name is string && request.resource.data.name.size() > 0);

      // Only authenticated admins can delete
      allow delete: if isAuthenticated();

      // Files subcollection
      match /files/{fileId} {
        allow read: if true;
        allow create, update, delete: if isAuthenticated();
      }

      // Comments subcollection
      match /comments/{commentId} {
        // Anyone can read comments
        allow read: if true;

        // Anyone can create comments (for public reviewers)
        allow create: if true;

        // Only authenticated admins can update/delete
        allow update, delete: if isAuthenticated();
      }
    }

    // Clients collection
    match /clients/{clientId} {
      // Only authenticated admins can read their own clients
      allow read: if isAuthenticated() && request.auth.uid != null;

      // Only authenticated admins can create with required name field
      allow create: if isAuthenticated() 
        && request.auth.uid != null
        && request.resource.data.name is string 
        && request.resource.data.name.size() > 0;

      // Only authenticated admins can update with name validation
      allow update: if isAuthenticated() 
        && request.auth.uid != null
        && (request.resource.data.name is string && request.resource.data.name.size() > 0);

      // Only authenticated admins can delete
      allow delete: if isAuthenticated() && request.auth.uid != null;
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Anyone can create notifications (for public reviewers creating comments)
      allow create: if true;

      // Admins can read/update their own notifications
      allow read, update: if isAuthenticated();

      // Only authenticated admins can delete
      allow delete: if isAuthenticated();
    }

    // Test collection for debugging
    match /test/{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}