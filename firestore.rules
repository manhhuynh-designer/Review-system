rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    // Projects collection
    match /projects/{projectId} {
      function isProjectActive() {
        let project = get(/databases/$(database)/documents/projects/$(projectId)).data;
        return project.status == 'active';
      }

      // Public read (for review links)
      allow read: if true;

      // Only authenticated admins can create with required name field
      allow create: if isAuthenticated() 
        && request.resource.data.name is string 
        && request.resource.data.name.size() > 0;

      // Only authenticated admins can update
      allow update: if isAuthenticated()
        && (request.resource.data.name is string && request.resource.data.name.size() > 0);

      // Only authenticated admins can delete
      allow delete: if isAuthenticated();

      // Files subcollection
      match /files/{fileId} {
        // Public read for files marked as public or when project allows public access
        allow read: if true; // Keep public for review functionality
        
        // Only authenticated users can create/update/delete files
        allow create: if isAuthenticated() 
          && request.resource.data.name is string
          && request.resource.data.name.size() > 0
          && isProjectActive();
          
        allow update, delete: if isAuthenticated();
      }

      // Comments subcollection
      match /comments/{commentId} {
        // Anyone can read comments
        allow read: if true;

        // Anyone can create comments with validation (anonymous allowed)
        allow create: if 
          request.resource.data.userName is string && 
          request.resource.data.userName.size() > 0 && 
          request.resource.data.userName.size() <= 100 &&
          request.resource.data.content is string && 
          request.resource.data.content.size() > 5 && 
          request.resource.data.content.size() <= 2000 &&
          request.resource.data.fileId is string &&
          // version optional but if present must be a number
          (!('version' in request.resource.data) || request.resource.data.version is number) &&
          // Prevent honeypot fields commonly used in anti-bot checks
          !('website' in request.resource.data) &&
          !('phone' in request.resource.data) &&
          !('email' in request.resource.data) &&
          isProjectActive();

        // Only authenticated admins can update/delete
        allow update, delete: if isAuthenticated();
      }
    }

    // Clients collection
    match /clients/{clientId} {
      // Only authenticated users can read their own clients
      allow read: if isAuthenticated() 
        && request.auth.token.email == resource.data.adminEmail;
      
      // Only authenticated users can create clients with required fields
      allow create: if isAuthenticated()
        && request.resource.data.name is string 
        && request.resource.data.name.size() > 0
        && request.resource.data.adminEmail == request.auth.token.email;
      
      // Only authenticated users can update their own clients
      allow update: if isAuthenticated()
        && request.auth.token.email == resource.data.adminEmail
        && request.resource.data.name is string 
        && request.resource.data.name.size() > 0;
      
      // Only authenticated users can delete their own clients
      allow delete: if isAuthenticated()
        && request.auth.token.email == resource.data.adminEmail;
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Cloud Functions create all notifications automatically
      // Client-side creation is no longer needed or allowed
      allow create: if false;

      // Admins can read/update their own notifications
      allow read, update: if isAuthenticated();

      // Only authenticated admins can delete
      allow delete: if isAuthenticated();
    }

    // Test collection for debugging
    match /test/{document=**} {
      allow read, write: if isAuthenticated();
    }

    // Project Invitations
    match /project_invitations/{token} {
      // Public can read if they know the token (ID)
      allow get: if true;
      
      // Admins can list (for dashboard)
      allow list: if isAuthenticated();

      // Admins can create
      allow create: if isAuthenticated();

      // Public can update (for device verification), ideally restricted to specific fields
      // but simplistic "true" relies on token secrecy (which is the ID)
      allow update: if true;
      
      // Admins can delete/revoke
      allow delete: if isAuthenticated();
    }

    // Mail collection for Trigger Email Extension
    match /mail/{mailId} {
      allow create: if isAuthenticated();
      // Only allow reading own emails if needed, but for now strict create only is safer for privacy
      // unless we track 'author'. System will write to this.
    }
  }
}