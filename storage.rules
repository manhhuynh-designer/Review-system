rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for public review links
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to projects folder
    match /projects/{projectId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to write comment attachments
    match /comments/{projectId}/{commentId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if true; // keep reads public (consistent with top-level read)
    }
    
    // Allow authenticated users to write to test folder (for debugging)
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
