rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public files for review links (explicitly marked as public)
    match /projects/{projectId}/public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Review files - only readable with valid project access
    match /projects/{projectId}/files/{allPaths=**} {
      allow read: if true; // For review functionality - but will use signed URLs
      allow write: if request.auth != null;
    }
    
    // Legacy projects folder - temporary compatibility (will phase out)
    match /projects/{projectId}/{fileId}/{allPaths=**} {
      allow read: if true; // Temporary for existing files
      allow write: if request.auth != null;
    }
    
    // Private files - admin only
    match /projects/{projectId}/private/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Comment attachments - public read, auth write
    match /comments/{projectId}/{commentId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Test folder for debugging - auth only
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
